<h2>Edit Student</h2>

<form method="POST" action="/students/<%= @student.id %>">

  <label for="house_select">Select House:</label>
  <select name="house_id" id="house_select">
    <% @houses.each do |house| %>

    <option value="<%= house.id %>"> <%= house.name.capitalize %> </option>

    <% end %>

  </select>

  <br>

  <label for="age">Age:</label>
  <input type="number" min="11" name="age" id="age" value="<%= @student.age %>" required>

  <br>

  <label for="first-name">First Name:</label>
  <input type="text" name="first_name" id="first-name" value="<%= @student.first_name %>" required>

  <br>

  <label for="last-name">Last Name:</label>
  <input type="text" name="last_name" id="last-name" value="<%= @student.last_name %>" required>

  <br>

  <input type="submit" value="Update">

</form>
